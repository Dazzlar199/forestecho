# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Tavily Search API Key (선택사항 - 검색 기능 사용 시)
TAVILY_API_KEY=your_tavily_api_key_here

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Admin Email (서버 사이드 전용 - 브라우저에 노출되지 않음)
ADMIN_EMAIL=your-admin-email@example.com

# Google AdSense (추후 추가)
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxx

# Toss Payments (앱인토스 결제용)
NEXT_PUBLIC_TOSS_PAY_CLIENT_KEY=your_toss_pay_client_key
NEXT_PUBLIC_TOSS_LOGIN_ENABLED=true
NEXT_PUBLIC_APP_NAME=ForestEcho

# Stripe (프리미엄 기능용, 추후 추가)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Pinecone Vector Database (RAG 시스템)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=psychology-kb

# Gemini API (유료 tier용)
GEMINI_API_KEY=your_gemini_api_key_here

# Upstash Redis (Rate Limiting)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Sentry (Error Monitoring)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ORG=your-organization-slug
SENTRY_PROJECT=your-project-slug
SENTRY_AUTH_TOKEN=your-auth-token
